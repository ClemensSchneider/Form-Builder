{%- set id          = custom.html.id is defined ? custom.html.id : '' %}
{%- set classes     = {} %}
{%- set required    = field.required is defined and field.required ? " required" %}
{%- set name        = name ~ '[]' %}

{%- set multiple   = false %}
{%- if settings.limit is defined and (settings.limit is empty or settings.limit > 1) %}
    {%- set multiple = true %}
{%- endif -%}

<input
    type="file"
    id="{{ id }}"
    class="{%- for class in classes %}{{ class }} {%- endfor %}"
    name="{{ name }}"
    {%- if multiple %} multiple{% endif %}
    {{- required -}}
>